<resources>

    <style name="QADeputyAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/QADeputyColorPrimary</item>
        <item name="colorPrimaryDark">@color/QADeputyColorPrimaryDark</item>
        <item name="colorAccent">@color/QADeputyColorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="QADeputyIcon">
        <item name="android:layout_width">@dimen/QADeputyIcon</item>
        <item name="android:layout_height">@dimen/QADeputyIcon</item>
        <item name="android:layout_margin">@dimen/QADeputyIconMargin</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
